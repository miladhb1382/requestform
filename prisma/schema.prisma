// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Request {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  status    String   @default("pending") 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}